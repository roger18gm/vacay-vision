@{
    ViewData["Title"] = "Home - VacayVision";
}

<div class="container mx-auto px-4 py-8">
    <!-- Hero Section -->
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-800 mb-4">Welcome to VacayVision</h1>
        <p class="text-xl text-gray-600 mb-8">Share your vacation experiences with the community</p>
        
        @if (User.Identity?.IsAuthenticated == true)
        {
            <div class="space-x-4">
                <a href="/community" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700">
                    Browse Community
                </a>
                <a href="/vacations" class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700">
                    My Vacations
                </a>
            </div>
        }
        else
        {
            <div class="space-x-4">
                <a href="/auth/login" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700">
                    Login
                </a>
                <a href="/auth/signup" class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700">
                    Sign Up
                </a>
            </div>
        }
    </div>

    <!-- Recent Vacations Preview -->
    @if (ViewBag.RecentVacations != null && ((List<juveApp.Models.CommunityRequest>)ViewBag.RecentVacations).Count > 0)
    {
        <div class="mb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Recent Community Vacations</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                @foreach (var request in (List<juveApp.Models.CommunityRequest>)ViewBag.RecentVacations)
                {
                    <div class="bg-white rounded-lg shadow-md overflow-hidden">
                        @if (!string.IsNullOrEmpty(request.Vacation?.ImageUrl))
                        {
                            <img src="@request.Vacation.ImageUrl" alt="@request.Vacation.Title" class="w-full h-40 object-cover">
                        }
                        <div class="p-4">
                            <h3 class="font-semibold text-gray-800">@request.Vacation?.Title</h3>
                            <p class="text-sm text-gray-600">@request.Vacation?.Destination</p>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-6">
                <a href="/community" class="text-blue-600 hover:underline">View all community vacations ‚Üí</a>
            </div>
        </div>
    }

    <!-- Features Section -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
            <div class="text-4xl mb-4">‚úàÔ∏è</div>
            <h3 class="text-xl font-semibold mb-2">Share Vacations</h3>
            <p class="text-gray-600">Document your travel experiences and share them with the community</p>
        </div>
        <div class="text-center">
            <div class="text-4xl mb-4">üåç</div>
            <h3 class="text-xl font-semibold mb-2">Discover Destinations</h3>
            <p class="text-gray-600">Browse approved vacations and get inspired for your next trip</p>
        </div>
        <div class="text-center">
            <div class="text-4xl mb-4">üí¨</div>
            <h3 class="text-xl font-semibold mb-2">Connect</h3>
            <p class="text-gray-600">Engage with travelers and share tips and recommendations</p>
        </div>
    </div>
</div>
