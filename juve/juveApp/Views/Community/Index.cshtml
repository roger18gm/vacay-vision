@model List<juveApp.Models.CommunityRequest>
@{
    ViewData["Title"] = "Community Vacations";
}

<div class="container mx-auto px-4 py-8">
    <!-- Headlines Section -->
    @if (ViewBag.Headlines != null && ((List<juveApp.Models.Headline>)ViewBag.Headlines).Count > 0)
    {
        <div class="mb-8">
            @foreach (var headline in (List<juveApp.Models.Headline>)ViewBag.Headlines)
            {
                <div class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 mb-4" role="alert">
                    <p class="font-bold">üì¢ Announcement</p>
                    <p>@headline.Message</p>
                </div>
            }
        </div>
    }

    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Community Vacations</h1>
        <div class="space-x-4">
            <a href="/community/submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">
                Submit Vacation
            </a>
            <a href="/community/my-submissions" class="bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700">
                My Submissions
            </a>
        </div>
    </div>

    <!-- Approved Vacations Grid -->
    @if (Model.Count == 0)
    {
        <div class="text-center py-12">
            <p class="text-gray-500 text-lg">No approved vacations yet. Be the first to share!</p>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var request in Model)
            {
                <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
                    @if (!string.IsNullOrEmpty(request.Vacation?.ImageUrl))
                    {
                        <img src="@request.Vacation.ImageUrl" alt="@request.Vacation.Title" class="w-full h-48 object-cover">
                    }
                    else
                    {
                        <div class="w-full h-48 bg-gray-300 flex items-center justify-center">
                            <span class="text-gray-500">No Image</span>
                        </div>
                    }

                    <div class="p-4">
                        <h3 class="text-xl font-semibold text-gray-800 mb-2">@request.Vacation?.Title</h3>
                        <p class="text-gray-600 mb-2">üìç @request.Vacation?.Destination</p>
                        <p class="text-gray-700 mb-4">@request.Vacation?.Description</p>

                        <div class="flex justify-between items-center text-sm text-gray-500">
                            <span>By
                                @if (request.UserId > 0)
                                {
                                    <a href="/users/@request.UserId"
                                        class="text-blue-600 hover:text-blue-700">@request.Vacation?.User?.Username</a>
                                }
                                else
                                {
                                    <text>@request.Vacation?.User?.Username</text>
                                }
                            </span>
                            <span>@request.CreatedAt.ToString("MMM dd, yyyy")</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>