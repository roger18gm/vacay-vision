@model SignupViewModel

@{
    ViewData["Title"] = "Create Account";
}

<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="w-full max-w-md bg-white rounded-lg shadow-md p-8">
        <h1 class="text-3xl font-bold text-center mb-2">Join VacayVision</h1>
        <p class="text-center text-gray-600 mb-8">Create your account to start planning vacations</p>

        <form asp-action="Signup" asp-controller="Auth" method="post" class="space-y-4">
            <div asp-validation-summary="ModelOnly"
                class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4"></div>

            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Email" type="email" placeholder="your.email@example.com"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Username" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Username" type="text" placeholder="Choose a username (min 8 characters)"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Username" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Password" type="password" placeholder="Create a password (min 8 characters)"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="ConfirmPassword" type="password" placeholder="Confirm your password"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
            </div>

            <button type="submit"
                class="w-full bg-green-600 text-white py-2 rounded-lg font-medium hover:bg-green-700 transition">
                Create Account
            </button>
        </form>

        <p class="mt-6 text-center text-sm text-gray-600">
            Already have an account?
            <a asp-action="Login" asp-controller="Auth" class="text-blue-600 font-medium hover:underline">
                Sign in here
            </a>
        </p>
    </div>
</div>