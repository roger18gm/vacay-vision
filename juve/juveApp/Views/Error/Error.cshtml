@{
    ViewData["Title"] = "Error";
    Layout = "_Layout";
    var statusCode = ViewData["StatusCode"] as int?;
}

<div class="container mx-auto px-4 py-16">
    <div class="max-w-2xl mx-auto text-center">
        <!-- Generic Error Icon -->
        <div class="mb-8">
            <svg class="mx-auto h-32 w-32 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z">
                </path>
            </svg>
        </div>

        <!-- Error Message -->
        @if (statusCode.HasValue)
        {
            <h1 class="text-6xl font-bold text-gray-800 mb-4">@statusCode</h1>
        }
        <h2 class="text-3xl font-semibold text-gray-700 mb-6">Something Went Wrong</h2>
        <p class="text-lg text-gray-600 mb-8">
            We encountered an unexpected error. Please try again or contact support if the problem persists.
        </p>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/"
                class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg transition-colors font-semibold">
                Go to Homepage
            </a>
            <button onclick="history.back()"
                class="bg-gray-600 hover:bg-gray-700 text-white px-8 py-3 rounded-lg transition-colors font-semibold">
                Go Back
            </button>
        </div>
    </div>
</div>