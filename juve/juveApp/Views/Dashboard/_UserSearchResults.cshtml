@model IEnumerable<juveApp.Models.User>

@{
    var searchQuery = ViewBag.SearchQuery as string;
}

<div id="search-results">
    @if (Model != null && Model.Any())
    {
        <div class="mt-4 space-y-2">
            <h3 class="font-semibold text-gray-700 mb-2">Results (@Model.Count()):</h3>
            @foreach (var user in Model)
            {
                <div class="p-3 bg-gray-50 rounded-lg">
                    <a href="/users/@user.UserId" class="text-blue-600 hover:text-blue-700 font-semibold">
                        @user.Username
                    </a>
                    <p class="text-sm text-gray-600">@user.Email</p>
                    <p class="text-sm text-gray-500">Role: @user.Role?.RoleName</p>
                </div>
            }
        </div>
    }
    else if (!string.IsNullOrEmpty(searchQuery))
    {
        <p class="mt-4 text-gray-500">No users found matching "@searchQuery"</p>
    }
</div>