@model juveApp.Services.DashboardStats

<div id="dashboard-stats" class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-4 mb-8">
    <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 rounded-lg">
        <div class="text-yellow-700 text-sm font-semibold mb-1">Pending Requests</div>
        <div class="text-3xl font-bold text-yellow-800">@Model?.PendingRequestsCount</div>
    </div>
    <div class="bg-green-50 border-l-4 border-green-500 p-4 rounded-lg">
        <div class="text-green-700 text-sm font-semibold mb-1">Approved</div>
        <div class="text-3xl font-bold text-green-800">@Model?.ApprovedRequestsCount</div>
    </div>
    <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-lg">
        <div class="text-red-700 text-sm font-semibold mb-1">Rejected</div>
        <div class="text-3xl font-bold text-red-800">@Model?.RejectedRequestsCount</div>
    </div>
    <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded-lg">
        <div class="text-blue-700 text-sm font-semibold mb-1">Total Users</div>
        <div class="text-3xl font-bold text-blue-800">@Model?.TotalUsersCount</div>
    </div>
    <div class="bg-purple-50 border-l-4 border-purple-500 p-4 rounded-lg">
        <div class="text-purple-700 text-sm font-semibold mb-1">Total Vacations</div>
        <div class="text-3xl font-bold text-purple-800">@Model?.TotalVacationsCount</div>
    </div>
</div>