<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VacayVision</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body>
    <nav class="bg-blue-600 text-white p-4">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold">
                <a href="/">VacayVision</a>
            </h1>
            <div class="flex items-center gap-4">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <span class="text-sm">
                        Welcome, @User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value!
                    </span>

                    @if (User.HasClaim("role_id", "2"))
                    {
                        <a href="/dashboard" class="hover:underline">Admin Dashboard</a>
                    }

                    <form method="post" asp-action="Logout" asp-controller="Auth" style="display: inline;">
                        <button type="submit" class="bg-red-600 px-4 py-2 rounded hover:bg-red-700">
                            Logout
                        </button>
                    </form>
                }
                else
                {
                    <a href="/auth/login" class="hover:underline">Login</a>
                    <a href="/auth/signup" class="bg-green-600 px-4 py-2 rounded hover:bg-green-700">
                        Sign Up
                    </a>
                }
            </div>
        </div>
    </nav>

    <main class="container mx-auto p-4">
        @await Html.PartialAsync("_Alerts")
        @RenderBody()
    </main>

    <footer class="bg-gray-200 py-6 mt-12">
        <div class="container mx-auto text-center text-sm text-gray-600">
            <p>&copy; @DateTime.Now.Year VacayVision. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://unpkg.com/htmx.org@2.0.4"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>