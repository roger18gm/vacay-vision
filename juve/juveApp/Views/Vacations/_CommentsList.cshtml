@model IEnumerable<juveApp.Models.VacationComment>

@{
    var currentUserId = (int)ViewBag.CurrentUserId;
}

<div class="space-y-4 mt-6">
    @foreach (var comment in Model.OrderBy(c => c.CreatedAt))
    {
        <div class="bg-white border border-gray-200 rounded-lg p-4">
            <div class="flex justify-between items-start mb-2">
                <div class="flex items-center">
                    <div
                        class="bg-blue-500 text-white rounded-full h-10 w-10 flex items-center justify-center font-semibold mr-3">
                        @if (comment.User != null && !string.IsNullOrEmpty(comment.User.Username))
                        {
                            @comment.User.Username.Substring(0, Math.Min(2, comment.User.Username.Length)).ToUpper()
                        }
                        else
                        {
                            <text>?</text>
                        }
                    </div>
                    <div>
                        <p class="font-semibold text-gray-800">
                            @if (comment.User != null)
                            {
                                @comment.User.Username
                            }
                            else
                            {
                                <text>Unknown User</text>
                            }
                        </p>
                        <p class="text-sm text-gray-500">@comment.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")</p>
                    </div>
                </div>

                @if (comment.UserId == currentUserId)
                {
                    <form asp-action="DeleteComment" asp-route-id="@comment.VacationId" asp-route-commentId="@comment.CommentId"
                        method="post" onsubmit="return confirm('Are you sure you want to delete this comment?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="text-red-600 hover:text-red-700 text-sm">
                            Delete
                        </button>
                    </form>
                }
            </div>

            <p class="text-gray-700 whitespace-pre-wrap ml-13">@comment.Content</p>
        </div>
    }
</div>