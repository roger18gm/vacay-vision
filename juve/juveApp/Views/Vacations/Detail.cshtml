@model juveApp.Models.Vacation

@{
    ViewData["Title"] = Model.Title;
    var currentUserId = (int)ViewBag.CurrentUserId;
    var isOwner = Model.UserId == currentUserId;
}

<div class="container mx-auto px-4 py-8">
    <!-- Back Button -->
    <div class="mb-4">
        <a asp-action="Index" class="text-blue-600 hover:text-blue-700 flex items-center">
            <svg class="h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18">
                </path>
            </svg>
            Back to My Vacations
        </a>
    </div>

    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <!-- Hero Image -->
        @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="@Model.Title" class="w-full h-96 object-cover">
        }
        else
        {
            <div class="w-full h-96 bg-gradient-to-br from-blue-400 to-purple-500 flex items-center justify-center">
                <svg class="h-32 w-32 text-white opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z">
                    </path>
                </svg>
            </div>
        }

        <!-- Content -->
        <div class="p-6">
            <!-- Title and Actions -->
            <div class="flex justify-between items-start mb-4">
                <div class="flex-1">
                    <h1 class="text-4xl font-bold text-gray-800 mb-2">@Model.Title</h1>
                    <p class="text-xl text-gray-600 flex items-center">
                        <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z">
                            </path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        @Model.Destination
                    </p>
                </div>

                @if (isOwner)
                {
                    <div class="flex gap-2 ml-4">
                        <a asp-action="Edit" asp-route-id="@Model.VacationId"
                            class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded transition-colors">
                            Edit
                        </a>
                        <form asp-action="Delete" asp-route-id="@Model.VacationId" method="post"
                            onsubmit="return confirm('Are you sure you want to delete this vacation? This action cannot be undone.');">
                            @Html.AntiForgeryToken()
                            <button type="submit"
                                class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded transition-colors">
                                Delete
                            </button>
                        </form>
                    </div>
                }
            </div>

            <!-- Metadata -->
            <div class="flex items-center text-sm text-gray-500 mb-6">
                <span>Created by
                    @if (Model.User != null)
                    {
                        <a href="/users/@Model.UserId" class="text-blue-600 hover:text-blue-700">@Model.User.Username</a>
                    }
                    else
                    {
                        <text>Unknown User</text>
                    }
                </span>
                <span class="mx-2">â€¢</span>
                <span>@Model.CreatedAt.ToString("MMMM dd, yyyy")</span>
            </div>

            <!-- Description -->
            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <div class="prose max-w-none mb-8">
                    <p class="text-gray-700 text-lg whitespace-pre-wrap">@Model.Description</p>
                </div>
            }

            <!-- Divider -->
            <hr class="my-8 border-gray-200">

            <!-- Comments Section -->
            <div class="mt-8">
                <h2 class="text-2xl font-bold text-gray-800 mb-4">
                    Comments (@(Model.Comments?.Count ?? 0))
                </h2>

                <!-- Add Comment Form -->
                @await Html.PartialAsync("_CommentForm", new juveApp.Models.ViewModels.AddCommentViewModel { VacationId
                                = Model.VacationId })

                <!-- Comments List -->
                @if (Model.Comments != null && Model.Comments.Any())
                {
                    @await Html.PartialAsync("_CommentsList", Model.Comments)
                }
                else
                {
                    <div id="comments-list" class="bg-gray-50 border border-gray-200 rounded-lg p-8 text-center mt-6">
                        <svg class="mx-auto h-12 w-12 text-gray-400 mb-3" fill="none" stroke="currentColor"
                            viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z">
                            </path>
                        </svg>
                        <p class="text-gray-600">No comments yet. Be the first to share your thoughts!</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
