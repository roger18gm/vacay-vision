@model juveApp.Models.ViewModels.AddCommentViewModel

<div class="bg-gray-50 rounded-lg p-4 mb-6">
    <form asp-action="AddComment" asp-route-id="@Model.VacationId" method="post"
        hx-post="/vacations/@Model.VacationId/comments" hx-target="#comments-list" hx-swap="outerHTML"
        hx-on::after-request="if(event.detail.successful) this.reset()">
        @Html.AntiForgeryToken()
        <input asp-for="VacationId" type="hidden" />

        <div class="mb-3">
            <label asp-for="Content" class="block text-gray-700 font-semibold mb-2">Add a comment</label>
            <textarea asp-for="Content" rows="3"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                placeholder="Share your thoughts..."></textarea>
            <span asp-validation-for="Content" class="text-red-600 text-sm"></span>
        </div>

        <div class="flex justify-end">
            <button type="submit"
                class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg transition-colors">
                Post Comment
            </button>
        </div>
    </form>
</div>