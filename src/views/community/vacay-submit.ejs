<%- include('../partials/header') %>
<main>
  <h1><%= title %></h1>
  <% if (step === 'step-1') { %>
  <h2>Step 1</h2>
  <p>
    select your vacation that you would like to submit to the community page
  </p>
  <% vacations.forEach(v => { %>
  <a>
    <article class="vacation-card">
      <h2><%= v.title %></h2>
      <p><strong>Destination:</strong> <%= v.destination %></p>
      <p><%= v.description %></p>
      <img
        src="<%= v.image_url %>"
        alt="Image of <%= v.title %>"
        style="max-width: 300px"
      />
    </article>
  </a>
  <% }) %>
  <a href="/community/submit?step=step-2"><button>Next Step</button></a>
  <% } %> <% if (step === 'step-2') { %>
  <h2>Step 2</h2>
  <% } %>
</main>
<%- include('../partials/footer') %>
